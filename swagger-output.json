    "/api/users": {
      "get": {
        "summary": "Get user list",
        "description": "Get user list",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "page, default 1",
            "schema": {
              "type": "object",
              "properties": {
                "page": {
                  "type": "number",
                  "example": 1
                }
              }
            }
          },
          {
            "name": "perPage",
            "in": "query",
            "description": "perPage, default 10",
            "schema": {
              "type": "object",
              "properties": {
                "perPage": {
                  "type": "number",
                  "example": 10
                }
              }
            }
          },
          {
            "name": "Authorization",
            "in": "header",
            "description": "Example: Bearer xxxxxx",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "Authorization": {
                  "type": "string",
                  "example": "Bearer "
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Get user list successfully.  \n LastSession and signUpAt the number of milliseconds.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Get user list successfully."
                },
                "users": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number",
                        "example": 1
                      },
                      "numberOfLogon": {
                        "type": "number",
                        "example": 1
                      },
                      "lastSession": {
                        "type": "number",
                        "example": 1666491318365
                      },
                      "signUpAt": {
                        "type": "number",
                        "example": 1666491318365
                      }
                    }
                  }
                },
                "dataTotal": {
                  "type": "number",
                  "example": 3
                },
                "page": {
                  "type": "number",
                  "example": 1
                },
                "perPage": {
                  "type": "number",
                  "example": 10
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        }
      }
    },
